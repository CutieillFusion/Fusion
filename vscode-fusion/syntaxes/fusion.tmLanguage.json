{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.fusion",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#function-decl" },
    { "include": "#import-lib" },
    { "include": "#struct-decl" },
    { "include": "#variable" },
    { "include": "#builtin-calls" },
    { "include": "#function-call" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#struct-use" },
    { "include": "#identifiers" },
    { "include": "#numbers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.number-sign", "match": "#.*$" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape", "match": "\\\\." }
          ]
        }
      ]
    },
    "function-decl": {
      "patterns": [
        {
          "name": "meta.function.declaration.fusion",
          "match": "\\b(extern)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "storage.type" },
            "3": { "name": "entity.name.function" }
          }
        },
        {
          "name": "meta.function.definition.export.fusion",
          "match": "\\b(export)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "storage.type" },
            "3": { "name": "entity.name.function" }
          }
        },
        {
          "name": "meta.function.definition.fusion",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()",
          "captures": {
            "1": { "name": "storage.type" },
            "2": { "name": "entity.name.function" }
          }
        }
      ]
    },
    "import-lib": {
      "patterns": [
        {
          "name": "meta.import.fusion",
          "match": "\\b(import)\\s+(lib)\\s+",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "storage.type" }
          }
        }
      ]
    },
    "struct-decl": {
      "patterns": [
        {
          "name": "meta.struct.fusion",
          "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type" },
            "2": { "name": "entity.name.type" }
          }
        },
        {
          "name": "meta.struct.export.fusion",
          "match": "\\b(export)\\s+(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "storage.type" },
            "3": { "name": "entity.name.type" }
          }
        }
      ]
    },
    "struct-use": {
      "patterns": [
        {
          "name": "meta.struct.use.alloc.fusion",
          "match": "\\balloc\\s*\\(\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\)",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.alloc_array.fusion",
          "match": "\\balloc_array\\s*\\(\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*,",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.return.fusion",
          "match": "->\\s+(?!(?:i32|i64|u32|u64|f32|f64|void|ptr)\\b)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.param.fusion",
          "match": ":\\s*(?!(?:i32|i64|u32|u64|f32|f64|void|ptr)\\b)([a-zA-Z_][a-zA-Z0-9_]*)\\s*[,)]",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.load_field.fusion",
          "match": "load_field\\s*\\([^)]*,\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*,",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.store_field.fusion",
          "match": "store_field\\s*\\([^)]*,\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*,",
          "captures": { "1": { "name": "entity.name.type" } }
        },
        {
          "name": "meta.struct.use.import.fusion",
          "match": "\\bstruct\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*;",
          "captures": { "1": { "name": "entity.name.type" } }
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "meta.definition.variable.fusion",
          "match": "\\b(let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type" },
            "2": { "name": "variable.other.readwrite" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()",
          "captures": {
            "1": { "name": "entity.name.function" }
          }
        }
      ]
    },
    "builtin-calls": {
      "patterns": [
        {
          "name": "support.function.builtin.range.fusion",
          "match": "\\b(range)\\s*\\(",
          "captures": { "1": { "name": "support.function.builtin.range" } }
        },
        {
          "name": "support.function.builtin.io.fusion",
          "match": "\\b(print)\\s*\\(",
          "captures": { "1": { "name": "support.function.builtin.io" } }
        },
        {
          "name": "support.function.builtin.alloc.fusion",
          "match": "\\b(alloc|alloc_array|alloc_bytes)\\s*\\(",
          "captures": { "1": { "name": "support.function.builtin.alloc" } }
        },
        {
          "name": "support.function.builtin.memory.fusion",
          "match": "\\b(load|store|load_field|store_field|load_f64|load_i32|load_ptr|addr_of)\\s*\\(",
          "captures": { "1": { "name": "support.function.builtin.memory" } }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(let|fn|lib)\\b"
        },
        {
          "name": "keyword.control",
          "match": "\\b(import|export|extern|struct|opaque|as|return|if|else|elif|for|in)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(i32|i64|u32|u64|f32|f64|void|ptr)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.range",
          "match": "\\b(range)\\b"
        },
        {
          "name": "support.function.builtin.io",
          "match": "\\b(print)\\b"
        },
        {
          "name": "support.function.builtin.alloc",
          "match": "\\b(alloc|alloc_array|alloc_bytes)\\b"
        },
        {
          "name": "support.function.builtin.memory",
          "match": "\\b(load|store|load_field|store_field|load_f64|load_i32|load_ptr|addr_of)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float", "match": "\\b\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer", "match": "\\b\\d+\\b" }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "keyword.operator", "match": "->" },
        { "name": "punctuation.definition.group.begin", "match": "\\(" },
        { "name": "punctuation.definition.group.end", "match": "\\)" },
        { "name": "punctuation.definition.block.begin", "match": "\\{" },
        { "name": "punctuation.definition.block.end", "match": "\\}" },
        { "name": "punctuation.definition.bracket.begin", "match": "\\[" },
        { "name": "punctuation.definition.bracket.end", "match": "\\]" },
        { "name": "punctuation.separator.comma", "match": "," },
        { "name": "punctuation.terminator.statement", "match": ";" },
        { "name": "punctuation.separator.colon", "match": ":" },
        { "name": "keyword.operator.assignment", "match": "=" },
        { "name": "keyword.operator.arithmetic", "match": "\\+|\\-|\\*|/" },
        { "name": "keyword.operator.comparison", "match": "==|!=|<=|>=|<|>" }
      ]
    }
  }
}
